#include <iostream>
using namespace std;
void main() {
	float  c, C, dt, t, num, anal;
	//function = Ccos(cx^2)
	// differentiation
	cout << " c C ?=";
	cin >> c >> C;
	cout << "t dt ? = ";
	cin >> t >> dt;
	anal = -C * 2*c*t * sin(c * (t*t));
	num = (C * cos(c * (t + dt)*(t+dt)) - C * (cos(c * t*t))) / dt;
	cout << " num " << num << " anal " << anal << endl;
	cout << " error = " << (num - anal) / anal * 100 << "%\n";

	// integration
	float a, b;
	int N;
	cout << "a b N =";
	cin >> a >> b >> N;
	anal = (C / c) * b*cos(c * b*b) -  (1/c) * sin(c * b*b)- (C / c) * a * cos(c * a * a) + (1 / c) * sin(c * a * a);
	dt = (b - a) / N;
	num = 0;
	for (int i = 0; i < N; i++) {
		num += C * cos(c * (a + dt * i)* (a + dt * i)) * dt;
	}
	cout << " num " << num << " anal " << anal << endl;
	cout << " error = " << (num - anal) / anal * 100 << "%\n";
}



